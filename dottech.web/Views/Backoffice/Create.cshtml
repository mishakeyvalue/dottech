@model dottech.web.ViewModels.ThoughtCreateModel

    @{ 
        ViewData["Title"] = "Create thought";
    }
   <h2>@ViewData["Title"]</h2>
<div class="col col-md-12">
    <form class="form-horizontal" action="Create" method="post">
        <div class="form-group">
            <label>Title:</label>
            <input asp-for="Title" />
        </div>

        <div class="form-group">
            <label>Body:</label>
            <textarea id="code" name="code"><html</textarea>
        </div>
        <input type="submit" class="btn btn-success" value="Post your thought!" />
    </form>

    @Html.Raw("<h1>Hello!</h1>");
</div>

<script src="~/lib/CodeMirror/lib/codemirror.js"></script>
<script src="~/lib/CodeMirror/mode/htmlmixed/htmlmixed.js"></script>
<script src="~/lib/CodeMirror/mode/xml/xml.js"></script>
<script src="~/lib/CodeMirror/mode/javascript/javascript.js"></script>
<script src="~/lib/CodeMirror/mode/css/css.js"></script>
<script src="~/lib/CodeMirror/addon/edit/closetag.js"></script>
<script src="~/lib/CodeMirror/addon/fold/xml-fold.js"></script>

<script type="text/javascript">
    var editor = CodeMirror.fromTextArea(document.getElementById("code"), {
        mode: 'text/html',
        autoCloseTags: true
    });
</script>
<link rel="stylesheet" href="~/lib/CodeMirror/lib/codemirror.css">

