    "globals": {
      "__TS_CONFIG__": "Client/tsconfig.spec.json",
      "__TRANSFORM_HTML__": true
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/Client/test/.*.ts"
    ],
    "coverageDirectory": "coverage"
  },
